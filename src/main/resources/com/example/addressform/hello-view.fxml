<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.addressform.AddressFormController"
          hgap="10" vgap="10">

    <Text text="Enter address here"
            textAlignment="CENTER"
            GridPane.columnIndex="0"
            GridPane.columnSpan="2"
            GridPane.rowIndex="0"
            style="-fx-max-width: Infinity; -fx-font-size: 30"/>

    <Label text="Country"  GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="countryInput" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Street" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="streetInput" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="House Number" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="houseNumberInput" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <Label text="Zip Code" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="zipCodeInput" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    <Button text="Save" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="2" GridPane.rowIndex="5"
            onAction="#onSubmitAddress" maxWidth="Infinity" maxHeight="Infinity" >
    </Button>

</GridPane>
